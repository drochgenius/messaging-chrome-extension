{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "jsx": "react",
        "alwaysStrict": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "strictNullChecks": false,
        "declaration": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "lib": [
            "esnext",
            "dom"
        ]
    },
    "baseUrl": "types",
    "typeRoots": [
        "types"
    ],
    "include": [
        "src/**/*",
        "__tests__/**/*"
    ]
}